<h1>Login</h1>
        <div class="login-wrapper">
            <div class="form-wrapper">
                <form class="login-form" id="login">
                    <label for="username"><b>Username</b></label>
                    <input type="text" placeholder="Enter Username" name="username" required>

                    <label for="password"><b>Password</b></label>
                    <input type="password" placeholder="Enter Password" name="password" required>

                    <button type="submit">Login</button>
                </form>
                <hr>
                <form class="login-form" id="signup">
                    <label for="email"><b>Email Address</b></label>
                    <input type="email" placeholder="Enter Desired Email" id="email-signup" name="email" required>

                    <label for="username"><b>Username</b></label>
                    <input type="text" placeholder="Enter Desired Username" id="username-signup" name="username" required>

                    <label for="password"><b>Password</b></label>
                    <input type="password" placeholder="Enter Desired Password" id="password-signup" name="password" required>

                    <button type="submit">Sign Up</button>
                </form>
            </div>
            <img src="/images/login.jpg">
        </div>